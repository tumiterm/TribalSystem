@model IEnumerable<CMS.App_Start.Municipality>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";


}

<p>
    <li class="btn btn-outline-secondary ml-2"><a href="@Url.Action("AddMunicipality", "Municipality")"><i class="fas fa-plus"></i> Add Municipality</a></li>
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of All Municipalities</h6>
    </div>
    <div class="card-body">
        <div class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <table class="table thead-dark" id="MunicipalityTbl">
                <thead>
                    <tr>
                        <th>
                            Municipality
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Province
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Country1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province.Province1)
                </td>
                <td class="btn-group">
                    <li class="btn btn-outline-success "><a href="@Url.Action("ModifyMunicipality", "Municipality", new { id = item.Id})"><i class="fa fa-edit"></i> Modify</a></li>
                    <li class="btn btn-danger "><a href="@Url.Action("RemoveMunicipality", "Municipality", new { id =item.Id})"><i class="fa fa-trash"></i> Remove</a></li>
                </td>
            </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts{

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>

        $(function () {

            $("#btnTest").click(function () {

                alert('Working....');
            });

        });

        $(function () {

            $(document).ready(function () {
                $('#MunicipalityTbl').DataTable();
            });

        });

    </script>
}
    
