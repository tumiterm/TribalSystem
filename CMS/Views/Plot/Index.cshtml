@model IEnumerable<CMS.App_Start.PlotTbl>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";


}

<p class="row">
    <li class="btn btn-outline-secondary ml-2"><a href="@Url.Action("PlotRegistration", "Plot")"><i class="fas fa-plus"></i> Add New Plot</a></li>
    <li class="btn btn-outline-danger mr-2 float-right"><a href="@Url.Action("RegisterDweller", "Dweller")"><i class="fa fa-window-close"></i> Close</a></li>

</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of All Registered Plots</h6>
    </div>
    <div class="card-body">
        <div class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <table class="table thead-dark" id="PlotTbl">
                <thead>
                    <tr>
                        <th>
                            Plot Number
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                           Hectare
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Province
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlotNumber)
                        </td>
                        <td>
                           R @Html.DisplayFor(modelItem => item.AmountPaid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hectare)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.Country1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Province.Province1)
                        </td>
                        <td class="btn-group">
                            <li class="btn btn-outline-success "><a href="@Url.Action("ModifyPlot", "Plot", new { id = item.Id})"><i class="fa fa-edit"></i> Modify</a></li>
                            <li class="btn btn-outline-dark "><a href="@Url.Action("BuyPlot", "Plot", new { plotId = item.Id})"><i class="fa fa-shopping-cart"></i> Buy</a></li>

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts{

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>

        $(function () {

            $(document).ready(function () {
                $('#PlotTbl').DataTable();
            });

        });

    </script>
}

