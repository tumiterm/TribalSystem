@model CMS.App_Start.Service

@{
    ViewBag.Title = "Add Service Delivery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <style>
        .note {
            text-align: center;
            height: 50px;
            background: -webkit-linear-gradient(left, #0072ff, #8811c5);
            color: #fff;
            font-weight: bold;
            line-height: 50px;
        }

        .form-content {
            padding: 5%;
            border: 1px solid #ced4da;
            margin-bottom: 2%;
        }

        .form-control {
            border-radius: 1.5rem;
        }

        .btnSubmit {
            border: none;
            border-radius: 1.5rem;
            padding: 1%;
            width: 20%;
            cursor: pointer;
            background: #0062cc;
            color: #fff;
        }
    </style>
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />


    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

@using (Html.BeginForm("LodgeServiceDelivery", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<body>

    <div class="note mt-3 mb-3">
        <p>Lodge Service Delivery Incident</p>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label id="name" for="inputRoomNum">Reference Number</label>
            @Html.EditorFor(model => model.ReferenceNumber, (String)ViewBag.referenceNum, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

        </div>

        <div class="form-group col-md-3">
            <label id="name" for="inputRoomNum">Area Name</label>
            @Html.EditorFor(model => model.AreaName, new { htmlAttributes = new { @class = "form-control", @id = "AreaName" } })
        </div>

        <div class="form-group col-md-3">
            <label id="name" for="inputRoomNum">Description</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "Description" } })
        </div>

        <div class="form-group col-md-3">
            <label id="name" for="inputRoomNum">Incident Photo</label>
            <input class="form-control text-box" type="file" name="FileBase" id="ImageFile" required />
        </div>


        <div class="form-group col-md-4">
            <label for="inputRoomNum">Dweller</label>
            @Html.DropDownList("DwellerId", ViewBag.DwellerId as SelectList, htmlAttributes: new { @class = "form-control", @id = "Dweller" })
        </div>



        <div class="form-group col-md-3">
            <label id="lName" for="inputRoomNum">Village</label>
            @Html.DropDownList("VillageId", ViewBag.VillageId as SelectList, htmlAttributes: new { @class = "form-control", @id = "Village" })
        </div>


        <div class="form-group col-md-3">
            <label for="inputRoomNum">Headsmen</label>
            @Html.DropDownList("HeadsmenId", ViewBag.HeadsmenId as SelectList, htmlAttributes: new { @class = "form-control", @id = "Headsmen" })

        </div>

        <div class="form-group col-md-2">
            <label for="inputRoomNum">Ward</label>
            @Html.DropDownList("WardId", ViewBag.WardId as SelectList, htmlAttributes: new { @class = "form-control", @id = "Ward" })
        </div>

        <div class="form-group col-md-3">
            <label for="inputRoomNum">Section</label>
            @Html.DropDownList("SectionId", ViewBag.SectionId as SelectList, htmlAttributes: new { @class = "form-control", @id = "Section" })

        </div>


        <div class="form-group col-md-3">
            <label for="inputRoomNum">Service Type</label>
            @Html.DropDownList("ServiceTypeId", ViewBag.ServiceTypeId as SelectList, htmlAttributes: new { @class = "form-control", @id = "ServiceType" })

        </div>

        <div class="form-group col-md-2">
            <label for="inputRoomNum">Service Status</label>
            @Html.DropDownList("ServiceStatusId", ViewBag.ServiceStatusId as SelectList, htmlAttributes: new { @class = "form-control", @id = "ServiceStatus" })
        </div>

        <div class="form-group col-md-2">
            <label for="inputRoomNum">Tribal Authority </label>
            @Html.DropDownList("TribalAuthorityId", ViewBag.TribalAuthorityId as SelectList, htmlAttributes: new { @class = "form-control", @id = "TribalAuthority" })
        </div>
    </div>
        
        <br />
        <div>
            <button type="submit" id="btnSubmit" value="Create" onclick="return validateData()" class="btn btn-outline-success pull-right"><i class="fa fa-save"></i> Save Case</button>
            <button type="button" id="btnReset" class="btn btn-outline-warning pull-right"><i class="fa fa-redo"></i> Reset</button>
            <button type="button" id="btnClose" class="btn btn-outline-danger float-right"><i class="fa fa-window-close"></i> Close</button>
        </div>
        
</body>

}


</html>









